.text-l-gray
  color $light-gray
.text-w-600
  font-weight 600
.l-h-50
  line-height 50px
.bg-red
  background #EC5641
.shape-circle
  border-radius 50%
.tab-category
  shadow()
  padding 13px 16px
  border-radius 30px
  color #9D9D9D
  background-color #fff
  font-size 18px
  line-height 20px
  cursor pointer
  min-width calc(100% / 3 - 15px)
  text-align center
  &.tab-blue
    background-color $d-blue
    color #fff
.music-list
  padding 0
  .list-item
    padding 10px 0px
  .l-block
    .q-avatar
      border-radius 50%
      shadow()
    img
      max-width 111px
    .q-avatar:after
      background-color #fff
      content ''
      height 30px
      width 30px
      display block
      position absolute
      top calc(50% - 15px)
      left calc(50% - 15px)
      border-radius 50%
      box-shadow inset 0pt 2pt 6pt rgba(0, 0, 0, 0.16)
  .r-block
    padding-left 30px
    position relative
  .play-panel
    position absolute
    color $d-blue
    bottom -10px
    right 0
    .q-btn--round
      min-width 2.5em
      min-height 2.5em
      height 2.5em
      width 2.5em
.ad-block
  z-index 1000
  .q-card
    height 375px
    background-color $ad-red
    border-radius 30px 30px 0px 0px
.cur-play
  height 50px
  background-color #fff
  width calc(100vw - 50px)
  box-shadow 0pt 0pt 10pt rgba(0, 0, 0, 0.16)
  border-radius 25px 25px 0px 0px
.btn-cur-play
  position absolute
  right 40px
.play-list
  .play-block
    width 45px
    color $d-blue
.img-cur-music
  padding 50px 0px 60px 0px
  .q-avatar__content
    shadow()
  .q-avatar:after
    background-color #fff
    content ''
    height 55px
    width 55px
    display block
    position absolute
    top calc(50% - 27.5px)
    left calc(50% - 27.5px)
    border-radius 50%
    box-shadow inset 0pt 2pt 6pt rgba(0, 0, 0, 0.16)
  &.img-helf
    position relative
    padding 50px 0px
    .q-avatar:after
      left -27.5px
    .q-avatar__content
      position absolute
      left -50%
.cur-music-modal
  .q-linear-progress
    margin-top 10px
    height 7px
    shadow()
  .time-block
    padding 5px
  .btn-play
    max-width 85px
    max-height 85px
    width 85px
    height 85px
    shadow()
    position relative
    img
      position absolute
      left 30px
  .info-title-block
    top 150px
    left 45%
