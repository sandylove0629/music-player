// 取代
body
  font-family "San Francisco Display Semibold"
  letter-spacing $d-letter-spacing
  .q-toolbar__title
    letter-spacing $d-letter-spacing
button
  outline none
ul
  padding-left 0
.no-shadow .q-layout__shadow:after
  box-shadow none
.search-bar
  width 100%
  .q-field__control:before
    border 0
  .q-field__control
    border 0
    padding 0px 24px
    shadow()
  .q-field__native
    line-height 18px
  .q-field__control, .q-field__marginal
    height 50px
.footer
  height 70px
  border-radius 25px 25px 0px 0px
  box-shadow 0pt 0pt 10pt rgba(0, 0, 0, 0.16)
  .footer-tabs, .q-tabs
    height 100%
  .q-layout__shadow
    display none
  .btn
    position relative
    height 44px
    width 44px
    &.btn-notice
      background-color $notice-red
      border-radius 50%
      shadow()
.cur-play-bar
  position absolute
  width calc(100vw - 80px)
  margin 0
  top 0

